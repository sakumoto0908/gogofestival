<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Festival</h1>
        <%= form_for @festival do |f| %>
          <div class="form-group">
            <%= f.label :event %>
            <%= f.text_area :event, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :place %>
            <%= f.text_area :place, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :ditail %>
            <%= f.text_area :ditail, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :logo %>
            <%= f.file_field :logo%>
          </div>

          <%= f.submit '登録', class: 'btn btn-black btn-block' %>

        <% end %>
      </div>
    </div>
  </div>
</div>