<head>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css">
</head>
<div class="topic-index-wrapper">
  <div class="container">
    <%# @topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%#= topic.user.name %>
            </h2>
            <%#= image_tag topic.image.url %>
            <%# if !topic.favorite_users.include?(current_user) %>
              <%#= link_to favorites_path(topic_id: topic.id), method: :post do %>
                <i class="fa-solid fa-thumbs-up fa-3x topic-index-icon" style="color:#808080;"></i>
              <%# end %>
            <%# else %>
             <%#= link_to favorites_path(topic_id: topic.id), method: :delete do %>
               <i class="fa-solid fa-thumbs-up fa-3x topic-index-icon" style="color:#0000ff;"></i>
             <%# end %>
            <%# end%>
            <%#= topic.favorite_users.count %>
            <%#= image_tag 'comment-dots-regular.svg', class: 'topic-index-icon' %>
            <p class="topic-text">
              <%#= topic.body %>
            </p>
            <%#= form_for [topic, @comment] do |f| %>
             <div class="form-group">
               <%#= f.text_area :body, class: 'form-control'%>
             </div>
             <button type="submit" class="btn btn-primary">コメント</button>
             <%# end %>
             <%# topic.comments.each do |comment| %>
              <p><%#= comment.body %></p>
             <%#end %>
          </div>
        </div>
      </div>
    <%# end %>
  </div>
</div>
