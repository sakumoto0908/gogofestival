<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4">
        <h1 class="text-center"><i class="fa-solid fa-pen"></i></i><span> M</span>emories of <span>F</span>es</h1>
        <%= form_for @topic do |f| %>
          <%= f.hidden_field :festival_id, value: @festival_id %>
          <div class="form-group">
            <%= f.label :image %>
            <%= f.file_field :image%>
          </div>

          <div class="form-group">
            <%= f.label :body %>
            <%= f.text_area :body, class: 'form-control' %>
          </div>

          <%= f.submit '投稿する', class: 'btn btn-black btn-block' %>

        <% end %>
      </div>
    </div>
  </div>
</div>
